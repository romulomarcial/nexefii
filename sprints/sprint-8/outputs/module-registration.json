{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ModuleRegistration",
  "type": "object",
  "properties": {
    "id": { "type": "string", "pattern": "^[a-z0-9_\\-]+$" },
    "name": { "type": "string" },
    "version": { "type": "string" },
    "category": { "type": "string", "enum": ["PMS","CMS","BMS","EMS","COMMON"] },
    "description": { "type": "string" },
    "openapi": { "type": "string", "format": "uri" },
    "uiBundle": { "type": "string", "format": "uri" },
    "license": {
      "type": "object",
      "properties": {
        "type": { "type": "string", "enum": ["free","trial","licensed"] },
        "sku": { "type": "string" },
        "exp": { "type": "string", "format": "date-time" }
      },
      "required": ["type"]
    },
    "requiredRoles": {
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "required": ["id","name","version","category"]
}
