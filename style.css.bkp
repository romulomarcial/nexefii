.tile{background:#fff;border:1px solid var(--line);border-radius:16px;padding:12px;box-shadow:0 8px 24px rgba(2,8,23,.06)}.tile h4{margin:0 0 8px 0}
.sub{font-size:12px;color:var(--muted)}.summary-grid{display:grid;gap:12px;grid-template-columns:1fr}
@media(min-width:900px){.summary-grid{grid-template-columns:repeat(3,1fr)}}
