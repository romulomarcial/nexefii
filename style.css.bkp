/* ========================================
   CALENDAR & TIMELINE STYLES
   ======================================== */

/* Calendar Header */
.calendar-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20px;
  background: #fff;
  border-bottom: 1px solid var(--line);
  margin-bottom: 20px;
}

.calendar-header h3 {
  margin: 0;
  font-size: 20px;
  font-weight: 600;
}

/* Calendar Grid */
.calendar-grid {
  padding: 0 20px 20px;
}

.calendar-weekdays {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 10px;
  margin-bottom: 10px;
  font-weight: 600;
  color: var(--muted);
  text-align: center;
  font-size: 14px;
}

.calendar-days {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 10px;
}

.calendar-day {
  aspect-ratio: 1;
  border: 1px solid var(--line);
  border-radius: 8px;
  padding: 8px;
  background: #fff;
  cursor: pointer;
  transition: all 0.2s;
  position: relative;
  display: flex;
  flex-direction: column;
}

.calendar-day.empty {
  background: #f9f9f9;
  cursor: default;
  border-color: transparent;
}

.calendar-day:not(.empty):hover {
  border-color: var(--blue);
  box-shadow: 0 2px 8px rgba(59, 130, 246, 0.15);
  transform: translateY(-2px);
}

.calendar-day.today {
  border-color: var(--blue);
  border-width: 2px;
  background: rgba(59, 130, 246, 0.05);
}

.calendar-day.has-reservations {
  background: rgba(76, 175, 80, 0.05);
}

.day-number {
  font-weight: 600;
  font-size: 14px;
  margin-bottom: 4px;
}

.calendar-day.today .day-number {
  color: var(--blue);
}

.day-info {
  display: flex;
  flex-direction: column;
  gap: 4px;
  font-size: 11px;
  margin-top: auto;
}

.day-info .badge {
  background: rgba(76, 175, 80, 0.1);
  color: #4CAF50;
  padding: 2px 6px;
  border-radius: 4px;
  font-size: 10px;
  font-weight: 600;
  text-align: center;
}

.badge-in {
  background: rgba(59, 130, 246, 0.1);
  color: #3B82F6;
  padding: 2px 6px;
  border-radius: 4px;
  font-size: 10px;
  font-weight: 600;
  display: inline-block;
}

.badge-out {
  background: rgba(255, 152, 0, 0.1);
  color: #FF9800;
  padding: 2px 6px;
  border-radius: 4px;
  font-size: 10px;
  font-weight: 600;
  display: inline-block;
}

/* Calendar Legend */
.calendar-legend {
  padding: 20px;
  background: #f9f9f9;
  display: flex;
  gap: 20px;
  justify-content: center;
  align-items: center;
  border-top: 1px solid var(--line);
  font-size: 14px;
}

.calendar-legend span {
  display: flex;
  align-items: center;
  gap: 6px;
}

.legend-badge {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 2px 6px;
  border-radius: 4px;
  font-size: 12px;
  font-weight: 600;
}

.today-marker {
  color: var(--blue);
  font-size: 18px;
}

/* Timeline Styles */
.timeline-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20px;
  background: #fff;
  border-bottom: 1px solid var(--line);
}

.timeline-header h3 {
  margin: 0;
  font-size: 18px;
  font-weight: 600;
}

.timeline-controls {
  display: flex;
  gap: 10px;
}

.timeline-container {
  overflow-x: auto;
  padding: 20px;
}

.timeline-dates {
  display: flex;
  margin-bottom: 10px;
  position: sticky;
  top: 0;
  background: #fff;
  z-index: 10;
  padding-bottom: 10px;
}

.timeline-rooms-header {
  min-width: 150px;
  font-weight: 600;
  display: flex;
  align-items: center;
  padding: 10px;
  background: #f9f9f9;
  border-radius: 8px;
  margin-right: 10px;
}

.timeline-date {
  min-width: 60px;
  text-align: center;
  padding: 8px;
  border-radius: 6px;
  margin-right: 4px;
  background: #f9f9f9;
}

.timeline-date.today {
  background: rgba(59, 130, 246, 0.1);
  border: 1px solid var(--blue);
}

.date-day {
  font-size: 11px;
  color: var(--muted);
  text-transform: uppercase;
}

.date-number {
  font-size: 18px;
  font-weight: 600;
  margin-top: 2px;
}

.timeline-date.today .date-number {
  color: var(--blue);
}

.timeline-grid {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.timeline-row {
  display: flex;
  align-items: stretch;
}

.timeline-room-label {
  min-width: 150px;
  padding: 12px;
  background: #f9f9f9;
  border-radius: 8px;
  margin-right: 10px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-weight: 600;
}

.room-count {
  font-size: 11px;
  color: var(--muted);
  font-weight: 400;
  margin-top: 4px;
}

.timeline-cells {
  display: flex;
  flex: 1;
  gap: 4px;
}

.timeline-cell {
  min-width: 60px;
  height: 60px;
  border: 1px solid var(--line);
  border-radius: 6px;
  cursor: pointer;
  transition: all 0.2s;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.timeline-cell:hover {
  border-color: var(--blue);
  box-shadow: 0 2px 8px rgba(59, 130, 246, 0.15);
  transform: translateY(-2px);
}

.timeline-cell.today {
  border-color: var(--blue);
  border-width: 2px;
}

.cell-count {
  font-weight: 600;
  font-size: 14px;
  color: #fff;
  text-shadow: 0 1px 2px rgba(0,0,0,0.3);
  z-index: 1;
}

/* Timeline Reservations List */
.timeline-reservations {
  margin-top: 30px;
  padding: 20px;
  background: #fff;
  border-top: 1px solid var(--line);
}

.timeline-reservations h4 {
  margin: 0 0 15px 0;
  font-size: 16px;
  font-weight: 600;
}

.timeline-res-list {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.timeline-res-item {
  position: relative;
  padding: 12px;
  background: #f9f9f9;
  border-radius: 8px;
  cursor: pointer;
  transition: all 0.2s;
}

.timeline-res-item:hover {
  background: #f0f0f0;
  transform: translateX(4px);
}

.res-bar {
  position: absolute;
  top: 0;
  height: 4px;
  border-radius: 4px 4px 0 0;
}

.res-label {
  color: #fff;
  font-size: 11px;
  font-weight: 600;
  padding: 2px 6px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.res-details {
  font-size: 13px;
  line-height: 1.6;
  margin-top: 4px;
}

.timeline-legend {
  padding: 20px;
  background: #f9f9f9;
  display: flex;
  gap: 20px;
  justify-content: center;
  align-items: center;
  border-top: 1px solid var(--line);
  font-size: 14px;
}

.timeline-legend span {
  display: flex;
  align-items: center;
  gap: 8px;
}

.legend-bar {
  width: 40px;
  height: 20px;
  border-radius: 4px;
  display: inline-block;
}

.empty-state-small {
  text-align: center;
  padding: 40px;
  color: var(--muted);
  font-size: 14px;
}

/* Responsive Adjustments */
@media (max-width: 768px) {
  .calendar-days {
    gap: 5px;
  }
  
  .calendar-day {
    padding: 4px;
    font-size: 12px;
  }
  
  .day-info {
    font-size: 9px;
  }
  
  .timeline-room-label,
  .timeline-rooms-header {
    min-width: 100px;
    font-size: 12px;
  }
  
  .timeline-cell {
    min-width: 40px;
    height: 40px;
  }
  
  .timeline-date {
    min-width: 40px;
  }
}

/* ========================================
   PMS Button Styles (scoped to PMS pages)
   ======================================== */
/* Do NOT override global .btn. Only tweak buttons inside PMS containers. */
.fd-container .btn,
.reservation-container .btn,
.reservation-header .btn,
.reservation-main .btn {
  padding: 6px 10px;
  border: 1px solid #e2e8f0;
  background: #fff;
  border-radius: 6px;
  cursor: pointer;
  font-size: 13px;
}
.fd-container .btn:hover,
.reservation-container .btn:hover,
.reservation-header .btn:hover,
.reservation-main .btn:hover { background: #f1f5f9; }

/* Backward-compat look for PMS secondary buttons only inside PMS containers */
.fd-container .btn-secondary,
.reservation-container .btn-secondary,
.reservation-header .btn-secondary,
.reservation-main .btn-secondary {
  padding: 6px 10px;
  border: 1px solid #e2e8f0;
  background: #fff;
  border-radius: 6px;
  cursor: pointer;
  font-size: 13px;
  color: #64748b;
}
.fd-container .btn-secondary:hover,
.reservation-container .btn-secondary:hover,
.reservation-header .btn-secondary:hover,
.reservation-main .btn-secondary:hover { background: #f8fafc; }

/* Ensure PMS primary buttons keep the primary color inside PMS containers */
.fd-container .btn.btn-primary,
.reservation-container .btn.btn-primary,
.reservation-header .btn.btn-primary,
.reservation-main .btn.btn-primary {
  background: #10b981;
  color: #fff;
  border-color: #10b981;
}
.fd-container .btn.btn-primary:hover,
.reservation-container .btn.btn-primary:hover,
.reservation-header .btn.btn-primary:hover,
.reservation-main .btn.btn-primary:hover {
  background: #059669;
}

