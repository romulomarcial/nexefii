/* Scheduling Configuration */
.scheduling-config { display: flex; flex-direction: column; gap: 12px; }
.retention-config { display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 12px; align-items: center; font-size: 14px; }
.retention-config input { width: 80px; }

/* Schedule List */
.schedule-list { margin-top: 24px; }
.schedule-list h4 { margin-bottom: 12px; color: #475569; font-size: 16px; }
.schedule-item { border: 1px solid #e2e8f0; padding: 12px; margin-bottom: 8px; border-radius: 6px; }

/* Backup Config */
.backup-config { display: flex; flex-direction: column; gap: 12px; }

/* Release Form */
.release-form { display: flex; flex-direction: column; gap: 12px; }

/* Release Timeline */
.release-timeline { display: flex; flex-direction: column; gap: 16px; }
.release-item { border-left: 4px solid #6c757d; padding: 16px; margin-bottom: 16px; background: #f8f9fa; border-radius: 6px; }

/* Rollback Panel */
.rollback-info, .restore-info { padding: 16px; background: #fff3cd; border: 1px solid #ffc107; border-radius: 6px; margin-bottom: 16px; }
.rollback-plan { padding: 16px; background: #f8f9fa; border: 1px solid #e2e8f0; border-radius: 6px; margin: 16px 0; }
.rollback-actions, .restore-actions { display: flex; justify-content: flex-end; gap: 8px; margin-top: 16px; }

/* Text utilities */
.text-center { text-align: center; }
.text-muted { color: #6c757d; }

/* Badge variants */
.badge { display: inline-block; padding: 4px 8px; border-radius: 4px; font-size: 12px; font-weight: 600; }
.badge-primary { background: #3b82f6; color: #fff; }
.badge-info { background: #06b6d4; color: #fff; }
.badge-success { background: #10b981; color: #fff; }
.badge-warning { background: #f59e0b; color: #fff; }
.badge-danger { background: #ef4444; color: #fff; }
.badge-secondary { background: #6c757d; color: #fff; }

/* Button small variant */
.btn-sm { padding: 6px 10px; font-size: 12px; }

/* Alert variants */
.alert { padding: 12px 16px; border-radius: 8px; margin-bottom: 16px; }
.alert-info { background: #e0f2fe; border: 1px solid #0ea5e9; color: #075985; }
.alert-warning { background: #fef3c7; border: 1px solid #f59e0b; color: #92400e; }
.alert-danger { background: #fee2e2; border: 1px solid #ef4444; color: #991b1b; }

/* Detail Grid for Backup Details */
.detail-grid { display: grid; grid-template-columns: 1fr 1fr; gap: 12px; }
.detail-item { padding: 8px; background: #f8fafc; border-radius: 6px; }
.detail-item.full-width { grid-column: 1 / -1; }
.detail-item strong { display: block; color: #475569; font-size: 12px; text-transform: uppercase; margin-bottom: 4px; }
.detail-item code { background: #e2e8f0; padding: 2px 6px; border-radius: 4px; font-size: 11px; word-break: break-all; }
.detail-item ul { margin: 8px 0 0 20px; }
.detail-item ul li { margin: 4px 0; }

/* Table container responsive */
.table-container { overflow-x: auto; margin: 16px 0; }
.master-table { width: 100%; border-collapse: collapse; }
.master-table thead { background: #f8fafc; }
.master-table th, .master-table td { padding: 12px; text-align: left; border-bottom: 1px solid #e2e8f0; }
.master-table th { font-weight: 600; color: #475569; font-size: 13px; text-transform: uppercase; }
.master-table tbody tr:hover { background: #f8fafc; }
.master-table .btn { margin: 0 4px; }

.alert { padding: 12px 16px; border-radius: 6px; margin: 12px 0; display: flex; align-items: start; gap: 10px; }
.alert .icon { font-size: 20px; }
.alert-success { background: #d1fae5; border: 1px solid #10b981; color: #065f46; }
.alert-warning { background: #fef3c7; border: 1px solid #f59e0b; color: #92400e; }
.alert-danger { background: #fee2e2; border: 1px solid #ef4444; color: #991b1b; }
.alert-info { background: #dbeafe; border: 1px solid #3b82f6; color: #1e40af; }

/* Full-width card */
.full-width { grid-column: 1 / -1; }

/* Custom Modal (for dynamic modals) */
#customModal { display: none; position: fixed; inset: 0; background: rgba(15,23,42,0.6); z-index: 10000; align-items: center; justify-content: center; }
#customModal.show { display: flex; }

/* Responsive adjustments for enterprise tabs */
@media (max-width: 768px) {
  .card-header { flex-direction: column; align-items: stretch; }
  .card-actions { flex-direction: column; width: 100%; }
  .card-actions .input, .card-actions .select { width: 100%; }
  .action-buttons { flex-direction: column; }
  .wizard-actions { flex-direction: column; }
  .retention-config { grid-template-columns: 1fr; }
}
