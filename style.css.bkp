/* Calendar and Dashboard Layout */
.calendar-section {
  background: #fff;
  border: 1px solid var(--line);
  border-radius: 12px;
  padding: 16px;
  box-shadow:0 4px 12px rgba(2,8,23,.04);
  display: flex;
  flex-direction: column;
}

/* Calendar table styles */
#calendarBox table {
  width: 100%;
  border-collapse: collapse;
  table-layout: fixed;
}

#calendarBox table th,
#calendarBox table td {
  border: 1px solid var(--line);
  padding: 6px;
  text-align: center;
  vertical-align: top;
  min-width: 36px;
  width: 14.28%; /* 100% / 7 days */
  height: 45px;
  font-size: 12px;
}

#calendarBox table th {
  background: #f8fafc;
  font-weight: 600;
  font-size: 11px;
  height: 35px;
}

#calendarBox {
  flex: 1;
  overflow-x: auto;
}

/* Control Modal Layout - Two Column Design */
.control-layout {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20px;
  padding: 20px;
  max-height: 85vh;
  overflow-y: auto;
}

.control-layout .modal-subtitle {
  grid-column: 1 / -1;
  margin-bottom: 0;
}

.control-left-col {
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.control-right-col {
  display: flex;
  flex-direction: column;
  gap: 20px;
}

/* Responsive: Stack on smaller screens */
@media (max-width: 1200px) {
  .control-layout {
    grid-template-columns: 1fr;
  }
}

.dashboard-section {
  background: #fff;
  border: 1px solid var(--line);
  border-radius: 12px;
  padding: 16px;
  max-height: 85vh;
  overflow-y: auto;
}

.room-stats {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
  gap: 8px;
  margin-bottom: 16px;
}

.stat-pill {
  background: #f8fafc;
  border: 1px solid var(--line);
  border-radius: 8px;
  padding: 6px 10px;
  font-size: 13px;
}

.stat-pill b {
  display: block;
  color: var(--ink);
  margin-bottom: 4px;
}

/* Dashboard cards */
.dashboard-cards{display:grid;grid-template-columns:1fr;gap:12px}
.dashboard-card{background:#fff;border:1px solid var(--line);border-radius:12px;padding:14px;box-shadow:0 6px 18px rgba(2,8,23,.03);display:flex;flex-direction:column}
.dashboard-card h4{margin:0 0 8px 0;font-size:14px}
.dashboard-card ul{list-style:none;padding:0;margin:0;flex:1}
.dashboard-card li{display:flex;justify-content:space-between;padding:6px 0;border-top:1px dashed var(--line);font-size:13px}
.dashboard-card li:first-child{border-top:0;padding-top:0}
.dashboard-card-button{text-align:center;margin-top:auto;padding-top:12px;border-top:1px solid var(--line)}
.count-badge{background:rgba(37,99,235,.08);color:var(--accent);padding:4px 8px;border-radius:999px;font-weight:700}

/* Status card for Hotel Status section */
.status-card{background:#fff;border:1px solid var(--line);border-radius:12px;padding:20px;box-shadow:0 4px 12px rgba(2,8,23,.04)}
.status-card .pill{background:var(--bg);border:1px solid var(--line);border-radius:8px;padding:12px;text-align:center}
