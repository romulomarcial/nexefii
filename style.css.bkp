/* Thermostat Modal Styles */
.thermostat-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.5);
  display: none;
  align-items: center;
  justify-content: center;
  z-index: 10000;
}

.thermostat-modal.open {
  display: flex;
}

.thermostat-container {
   background: #1a1a1a;
   border-radius: 20px;
   padding: 20px;
   width: 360px;
   max-width: 90vw;
   color: #fff;
   position: relative;
  box-shadow: 0 20px 25px -5px rgba(0,0,0,0.2);
}

.thermostat-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
}

.thermostat-header h2 {
  margin: 0;
  font-size: 18px;
}

.auto-section {
  display: flex;
  justify-content: center;
  margin: 15px 0;
}

.auto-button {
  background: rgba(59, 130, 246, 0.1);
  border: 1px solid rgba(59, 130, 246, 0.5);
  color: #fff;
  padding: 10px 30px;
  border-radius: 12px;
  font-weight: bold;
  font-size: var(--auto-font-size, 14px);
  cursor: pointer;
  transition: all 0.2s;
  min-width: 100px;
  text-align: center;
}

.auto-button.active {
  background: #3b82f6;
  border-color: #3b82f6;
}

.room-info {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
}

.temp-controls-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 15px;
  margin: 20px 0;
}

.temp-display {
  text-align: center;
  margin-bottom: 15px;
}

/* Responsive sizing for thermostat modal */
@media (min-width: 1024px) {
  /* Desktop/laptop: comfortable fixed width */
  .thermostat-container {
    width: 360px;
    padding: 20px;
  }
  #setPointDisplay { font-size: 48px; }
}

@media (min-width: 600px) and (max-width: 1023px) {
  /* Tablet: slightly narrower */
  .thermostat-container {
    width: 320px;
    padding: 18px;
  }
  #setPointDisplay { font-size: 44px; }
}

@media (max-width: 599px) {
  /* Mobile: use percentage width so it fits small screens */
  .thermostat-container {
    width: 90%;
    padding: 14px;
    border-radius: 14px;
    margin: 0 auto;
  }
  #setPointDisplay { font-size: 40px; }
  /* Make sure buttons stack nicely on narrow screens */
  .thermostat-controls { display:flex; gap:8px; flex-wrap:wrap; justify-content:center; }
}

/* Specific setpoint center styles to ensure compact, centered layout */
.setpoint-center #setPointDisplay {
  font-size: 48px;
  font-weight: 800;
  color: #3b82f6;
  line-height: 1;
}
.setpoint-center #roomTempSmall,
.setpoint-center #humidityDisplay {
  font-size: 12px;
  color: var(--muted, #9ca3af);
  margin-top: 6px;
}
.temp-row .temp-btn {
  width: 48px;
  height: 48px;
  border-radius: 24px;
  background: rgba(255,255,255,0.06);
  border: 1px solid rgba(255,255,255,0.08);
  color: #fff;
  font-size: 20px;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}
.auto-button {
  --auto-font-size: 20px;
  padding: 8px 18px;
  border-radius: 10px;
  background: rgba(59,130,246,0.08);
  border: 1px solid rgba(59,130,246,0.25);
  color: #3b82f6;
  cursor: pointer;
  font-size: var(--auto-font-size);
}
.control-buttons { display:flex; gap:8px; }
.fan-section { /* ensure vertical stacking with centered AUTO */
  display:flex;
  flex-direction:column;
  align-items:center;
}

/* Ensure unit toggle is small and inline in header */
.thermostat-header .unit-toggle {
  padding: 6px 10px;
  font-size: 13px;
}
#roomTempSmall {
  font-size: 16px;
  color: rgba(255, 255, 255, 0.7);
}
.temp-controls {
  display: grid;
  grid-template-columns: repeat(2, auto);
  gap: 80px;
  margin: 10px 0;
}
/* New centered close button */
.unit-toggle {
  margin-top: 10px;
  padding: 8px 24px;
  border-radius: 12px;
  background: rgba(255, 255, 255, 0.1);
  border: 1px solid rgba(255, 255, 255, 0.2);
  color: white;
  font-size: 14px;
  cursor: pointer;
  transition: all 0.2s;
}

/* Strong override to ensure setPoint display is large, bold and blue
   This uses higher specificity and !important to beat any conflicting rules */
.thermostat-container .setpoint-center #setPointDisplay {
  font-size: 48px !important;
  font-weight: 800 !important;
  color: #3b82f6 !important;
  text-align: center !important;
}

@media (max-width: 1023px) {
  .thermostat-container .setpoint-center #setPointDisplay {
    font-size: 44px !important;
  }
}

@media (max-width: 599px) {
  .thermostat-container .setpoint-center #setPointDisplay {
    font-size: 40px !important;
  }
}

/* ===== Master Panel: Toasts ===== */
.toast-container {
  position: fixed;
  right: 16px;
  bottom: 16px;
  display: flex;
  flex-direction: column;
  gap: 8px;
  z-index: 99999;
}
.toast {
  min-width: 280px;
  max-width: 420px;
  background: #111827;
  color: #f9fafb;
  border: 1px solid rgba(255,255,255,0.08);
  border-radius: 10px;
  padding: 12px 14px;
  box-shadow: 0 10px 20px rgba(0,0,0,0.2);
  display: flex;
  align-items: center;
  gap: 10px;
  animation: toast-in 200ms ease-out;
}
.toast .icon { font-size: 18px; }
.toast-success { border-color: #10b98133; }
.toast-error { border-color: #ef444433; }
.toast-warning { border-color: #f59e0b33; }
.toast-info { border-color: #3b82f633; }
@keyframes toast-in { from { opacity: 0; transform: translateY(8px);} to { opacity:1; transform: translateY(0);} }
.unit-toggle:hover {
  background: rgba(255, 255, 255, 0.15);
}

.speed-suggestion {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 8px;
  padding: 10px 15px;
  font-size: 13px;
  color: #fcd34d;
  margin: 10px 0;
  text-align: center;
  display: none;
}

.close-circle {
  position: absolute;
  top: -20px;
  left: 50%;
  transform: translateX(-50%);
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background: #ef4444;
  border: 2px solid #fff;
  color: #fff;
  font-size: 24px;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  z-index: 10;
  box-shadow: 0 2px 8px rgba(0,0,0,0.2);
  transition: all 0.2s ease;
}

.close-circle:hover {
  background: #dc2626;
  transform: translateX(-50%) scale(1.1);
}
.temp-display { font-size: 48px; font-weight: bold; margin: 10px 0; color: #3b82f6; }
.temp-btn:hover {
  background: rgba(255,255,255,0.2);
}

.unit-toggle {
  margin-top: 5px;
  padding: 8px 20px;
  border-radius: 12px;
  background: rgba(255,255,255,0.1);
  border: 1px solid rgba(255,255,255,0.2);
  color: white;
  font-size: 14px;
  cursor: pointer;
  transition: all 0.2s;
}


/* Temperature change animations */
.temp-change {
  animation: tempFlash 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.temp-change[data-hvac="Heat"] {
  animation: tempFlashHeat 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.temp-change[data-hvac="Cool"] {
  animation: tempFlashCool 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

@keyframes tempFlash {
  0% { transform: scale(1); filter: brightness(1); }
  50% { transform: scale(1.15); color: #22c55e; filter: brightness(1.2); }
  100% { transform: scale(1); filter: brightness(1); }
}

@keyframes tempFlashHeat {
  0% { transform: scale(1); text-shadow: none; }
  50% { 
    transform: scale(1.15); 
    color: #ef4444;
    text-shadow: 0 0 10px rgba(239, 68, 68, 0.3);
  }
  100% { transform: scale(1); text-shadow: none; }
}

@keyframes tempFlashCool {
  0% { transform: scale(1); text-shadow: none; }
  50% { 
    transform: scale(1.15); 
    color: #3b82f6;
    text-shadow: 0 0 10px rgba(59, 130, 246, 0.3);
  }
  100% { transform: scale(1); text-shadow: none; }
}

/* Toast enhancements */
.toast {
  animation: toastSlide 0.3s ease-out;
  background: rgba(0, 0, 0, 0.9);
  backdrop-filter: blur(4px);
  border: 1px solid rgba(255, 255, 255, 0.1);
