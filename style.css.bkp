/* style.css (modular) */
:root{--bg:#f6f8fb;--card:#fff;--ink:#0f172a;--muted:#52607a;--line:#e8edf5;--accent:#2563eb}
*{box-sizing:border-box}html,body{height:100%}body{margin:0;background:var(--bg);color:var(--ink);font-family:ui-sans-serif,system-ui,-apple-system,Segoe UI,Roboto,Helvetica,Arial}

/* Transi√ß√µes suaves para elementos de texto */
[data-i18n] {
  transition: opacity 0.3s ease-in-out;
}
[data-i18n].changing {
  opacity: 0;
}

/* Indicador de loading */
.loading-overlay {
  position: fixed;
  inset: 0;
  background: rgba(255, 255, 255, 0.8);
  display: none;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}
.loading-overlay.show {
  display: flex;
}
.loading-spinner {
  width: 40px;
  height: 40px;
  border: 4px solid var(--line);
  border-top-color: var(--accent);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}
@keyframes spin {
  to { transform: rotate(360deg); }
}
.card{background:#fff;border:1px solid var(--line);border-radius:18px;box-shadow:0 10px 30px rgba(2,8,23,.06)}
.btn{background:#fff;color:var(--ink);border:1px solid var(--line);border-radius:12px;padding:10px 14px;font-weight:700;cursor:pointer}
.btn.primary{background:var(--accent);color:#fff;border-color:var(--accent)}.btn.ghost{background:transparent;border-color:#cbd5e1}
.brand{display:flex;align-items:center;gap:10px;font-weight:800}.brand img{height:40px}
@media(min-width:1200px){.brand img{height:48px}}

/* Responsive header refinements for small screens */
@media(max-width:640px){
  header{ padding:8px 10px; flex-wrap:wrap; row-gap:6px }
  header .brand{ gap:8px }
  header .brand img{ height:36px }
  /* Place right-side actions on next line and allow wrapping */
  header > div:last-child{ width:100%; display:flex; flex-wrap:wrap; gap:8px }
  header .user{ font-size:12px }
}

/* Modal headers: keep tidy on small screens */
@media(max-width:640px){
  .modal-header{ flex-wrap:wrap; row-gap:6px }
  .modal-header .brand img{ height:32px }
}
header{position:sticky;top:0;z-index:5;background:rgba(255,255,255,.9);backdrop-filter:blur(10px);border-bottom:1px solid var(--line);display:flex;align-items:center;justify-content:space-between;padding:10px 14px}
.user{font-size:14px;color:var(--muted)}.legend{display:flex;gap:8px;align-items:center;font-size:12px;color:var(--muted)}
.dot{width:10px;height:10px;border-radius:999px;display:inline-block}.dot.g{background:#22c55e}.dot.y{background:#f59e0b}.dot.r{background:#ef4444}
.modal{position:fixed;inset:0;background:rgba(15,23,42,.55);display:none;align-items:center;justify-content:center;z-index:50}.modal.open{display:flex}
.modal-card{width:96vw;height:92vh;background:#fff;border:1px solid var(--line);border-radius:18px;overflow:hidden;display:flex;flex-direction:column}
.modal-header{display:flex;align-items:center;justify-content:space-between;padding:10px 12px;border-bottom:1px solid var(--line);background:#f9fafb}
.modal-body{flex:1;display:grid;grid-template-columns:1fr;gap:16px;padding:14px;background:#fff}
/* Hide modal header titles globally (we keep DOM nodes for JS, but not visual) */
.modal-header .brand > div[id$="Title"]{ display:none }
/* Subtitles inserted under headers in modal bodies */
.modal-subtitle{ font-size:12px; color:var(--muted); margin: -6px 0 4px 2px }
.container{max-width:1200px;margin:0 auto;padding:18px}.grid{display:grid;gap:16px;grid-template-columns:1fr}
@media(min-width:1000px){
  .grid{grid-template-columns:1.1fr .9fr}
  .modal-body{grid-template-columns:1.2fr 0.8fr}
}

@media(min-width:1200px){
  .modal-body{grid-template-columns:1.4fr 0.6fr}
