.metric-tile{background:linear-gradient(135deg,#f8fafc 0%,#ffffff 100%);border:1px solid var(--line);border-radius:10px;padding:16px;text-align:center;transition:all 0.2s}
.metric-tile:hover{box-shadow:0 6px 16px rgba(2,8,23,.08);transform:translateY(-2px)}
.metric-label{font-size:12px;text-transform:uppercase;color:var(--muted);margin-bottom:8px;font-weight:600}
.metric-value{font-size:24px;font-weight:700;color:var(--accent)}

/* Modules section wrapper */
.modules-section{background:#fff;border:1px solid var(--line);border-radius:12px;padding:20px;box-shadow:0 4px 12px rgba(2,8,23,.04)}

/* Chart toggle button in cards */
.chart-toggle{display:flex;gap:4px;background:var(--bg);border-radius:6px;padding:4px;margin-bottom:8px}
.chart-toggle button{background:transparent;border:none;padding:6px 10px;border-radius:4px;cursor:pointer;font-size:12px;color:var(--muted);transition:all 0.2s}
.chart-toggle button.active{background:#fff;color:var(--accent);box-shadow:0 2px 4px rgba(2,8,23,.06)}
.chart-toggle button:hover{color:var(--ink)}

