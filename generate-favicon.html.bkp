<!DOCTYPE html>
<html>
<head>
  <title>Gerar Favicon ICO</title>
</head>
<body>
  <h2>Gerando favicon.ico...</h2>
  <canvas id="canvas" width="32" height="32"></canvas>
  <a id="download" download="favicon.ico">Baixar favicon.ico</a>
  
  <script>
    const canvas = document.getElementById('canvas');
    const ctx = canvas.getContext('2d');
    
    // Desenhar favicon
    // Background gradient
    const gradient = ctx.createLinearGradient(0, 0, 32, 32);
    gradient.addColorStop(0, '#667eea');
    gradient.addColorStop(1, '#764ba2');
    
    // Circle
    ctx.beginPath();
    ctx.arc(16, 16, 14, 0, Math.PI * 2);
    ctx.fillStyle = gradient;
    ctx.fill();
    
    // Shield
    ctx.fillStyle = 'rgba(255, 255, 255, 0.9)';
    ctx.beginPath();
    ctx.moveTo(16, 6);
    ctx.lineTo(10, 9);
    ctx.lineTo(10, 16);
    ctx.quadraticCurveTo(10, 22, 16, 26);
    ctx.quadraticCurveTo(22, 22, 22, 16);
    ctx.lineTo(22, 9);
    ctx.closePath();
    ctx.fill();
    
    // Letter M
    ctx.fillStyle = '#667eea';
    ctx.font = 'bold 12px Arial';
    ctx.textAlign = 'center';
    ctx.textBaseline = 'middle';
    ctx.fillText('M', 16, 18);
    
    // Convert to ICO (simples PNG 32x32)
    canvas.toBlob(function(blob) {
      const url = URL.createObjectURL(blob);
      document.getElementById('download').href = url;
      document.getElementById('download').click();
    });
  </script>
</body>
</html>
